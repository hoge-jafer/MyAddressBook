<Page x:ConnectionId='1'
    x:Class="MyAddressBook.DataViewPage.ContactPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyAddressBook.DataViewPage"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:MyAddressBook.Models"
                        
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#009ACD">
            <TextBlock Text="我的联系人"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="36"
                   FontFamily="等线"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="索引" Grid.Column="0"
                           HorizontalAlignment="Center" FontSize="24"/>
                <TextBlock Text="联系人" Grid.Column="1"
                           HorizontalAlignment="Center" FontSize="24"/>
                <TextBlock Text="号码" Grid.Column="2"
                           HorizontalAlignment="Center" FontSize="24"/>
                <TextBlock Text="备注" Grid.Column="3"
                           HorizontalAlignment="Center" FontSize="24"/>
            </Grid>
            <ListView x:ConnectionId='3' Name="DelContactListView" Grid.Row="2"
                                                        
                                                          >
                <ListView.ItemTemplate>
                    <DataTemplate                                >
                        <Grid x:ConnectionId='4'>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="135"/>
                                <ColumnDefinition Width="115"/>
                                <ColumnDefinition Width="105"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:ConnectionId='5' Grid.Column="0"                    HorizontalAlignment="Center" FontSize="18"/>
                            <TextBlock x:ConnectionId='6' Grid.Column="1"                               HorizontalAlignment="Center" FontSize="18"/>
                            <TextBlock x:ConnectionId='7' Grid.Column="2"                               HorizontalAlignment="Center" FontSize="18"/>
                            <TextBlock x:ConnectionId='8' Grid.Column="3"                                 HorizontalAlignment="Center" FontSize="18"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <StackPanel VerticalAlignment="Bottom" Grid.Row="2"
                    Orientation="Horizontal" HorizontalAlignment="Center"
                    Margin="0,0,0,20">
            <Button x:ConnectionId='2' Name="DelDataButton" Width="150"
                    Content="删除"  Height="50"
                    Margin="10,0,10,0"
                                               />
            
        </StackPanel>
       
    </Grid>
</Page>

